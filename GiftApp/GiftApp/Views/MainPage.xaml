<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GiftApp"
             x:Class="GiftApp.MainPage">

    <StackLayout>
        <Button Text="Mes envies"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Command="{Binding SeeMyEnviesCommand}" />

        <Button Text="Leurs envies"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Command="{Binding SeeAllEnviesCommand}" />
    </StackLayout>

</ContentPage>

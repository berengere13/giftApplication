<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GiftsProject.Views.LoginPage"
             Title="Bienvenue">
<ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
            <Label Text="Bienvenue dans Gift App"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Rentre ton nom pour ajouter tes cadeaux"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            
            <Entry Placeholder="Prénom"
                   Text="{Binding Prenom}"
                   TextChanged="LoginChanged"
                   HorizontalOptions="Center"></Entry>

            <Button Text="Commencer"
                   HorizontalOptions="End"
                    VerticalOptions="Center"
                    IsEnabled="{Binding IsLoginIsEnabled}"
                    Command="{Binding StartCommand}"
                    Clicked="Button_OnClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>